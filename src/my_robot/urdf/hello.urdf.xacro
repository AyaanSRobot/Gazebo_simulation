<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot" >

  <xacro:include filename="colours.xacro" />

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.3 0.3" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.3 0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value = "1.0"/>
      <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.0375" iyz="0" izz="0.0375"/>
    </inertial>
  </link>

  <link name="other_link">
    <visual>
      <geometry>
        <box size="0.6 0.3 0.3" />
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.3 0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value = "1.0"/>
      <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.0375" iyz="0" izz="0.0375"/>
    </inertial>
  </link>

  <joint name="other_link_joint" type="continuous">
    <parent link="base_link"/>
    <child link="other_link"/>
    <origin rpy="0 0 0" xyz="0.3 0.35 -0.1"/>
    <axis xyz="0 1 0"/>
  </joint>
  
</robot>
