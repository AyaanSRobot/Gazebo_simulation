<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

	<xacro:include filename="colours.xacro" />
	<xacro:include filename="inertial_macros.xacro" />

	<link name="world"></link>

	<joint name="base_joint" type="fixed">
		<origin xyz="0 0 0.2" rpy="0 0 0" />
		<parent link="world" />
		<child link="base_link" />
	</joint>

	<link name="base_link">
		<visual>
			<geometry>
				<box size="0.6 0.3 0.3" />
			</geometry>
			<material name="blue" />
		</visual>
		<collision>
			<geometry>
				<box size="0.6 0.3 0.3" />
			</geometry>
		</collision>
		<!-- Using inertial_box macro -->
		<xacro:inertial_box mass="1" x="0.6" y="0.3" z="0.3">
			<origin xyz="0 1 0" rpy="0 0 0" />
		</xacro:inertial_box>
	</link>

	<link name="other_link">
		<visual>
			<geometry>
				<box size="0.6 0.3 0.3" />
			</geometry>
			<material name="red" />
		</visual>
		<collision>
			<geometry>
				<box size="0.6 0.3 0.3" />
			</geometry>
		</collision>
		<!-- Using inertial_box macro -->
		<xacro:inertial_box mass="1" x="0.6" y="0.3" z="0.3">
			<origin xyz="0 1 0" rpy="0 0 0" />
		</xacro:inertial_box>
	</link>

	<joint name="other_link_joint" type="continuous">
		<parent link="base_link" />
		<child link="other_link" />
		<origin rpy="0 0 0" xyz="0 0.3 0" />
		<axis xyz="0 1 0" />
	</joint>

	<link name="camera_link">
        <visual>
            <origin xyz="-0.03 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.06 0.15 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <visual>
            <origin xyz="0.03 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.06" radius="0.04" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.12 0.15 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.12" y="0.15" z="0.15">
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

	<joint name="camera_joint" type="fixed">
        <origin xyz="0.5 0 0.5" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="camera_link"/>        
    </joint>

	<xacro:include filename="hello_gazebo.xacro" />

</robot>