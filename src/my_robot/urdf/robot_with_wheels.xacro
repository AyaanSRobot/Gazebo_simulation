<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mobile_robot">

    <!-- <xacro:include filename="camera.xacro" /> -->

    <link name="robot_body">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="1 0.6 0.3" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="1 0.6 0.3" />
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0" />
            <inertia ixx="0.0375" iyy="0.113333333" izz="0.0908333333" ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>

    <xacro:macro name="wheels" params="prefix joint_x joint_y joint_z">
        <xacro:property name="length" value="0.1" />
        <xacro:property name="radius" value="0.15" />
        <xacro:property name="mass" value="0.1" />

        <link name="${prefix}_link">
            <visual>
                <origin rpy="1.570795 0 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="${length}" radius="${radius}" />
                </geometry>
                <material name="yellow">
                    <color rgba="1 1 0 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="1.570795 0 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="${length}" radius="${radius}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="${mass}" />
                <inertia ixx="${1/12*mass*(3*radius*radius + length*length)}"
                    iyy="${1/12*mass*(3*radius*radius + length*length)}"
                    izz="${1/2*mass*radius*radius}"
                    ixy="0" ixz="0" iyz="0" />
            </inertial>
        </link>

        <joint name="${prefix}_joint" type="continuous">
            <parent link="robot_body" />
            <child link="${prefix}_link" />
            <origin xyz="${joint_x} ${joint_y} ${joint_z}" rpy="0 0 0" />
            <axis xyz="0 1 0" />
        </joint>

    </xacro:macro>

    <!-- Instantiating wheels at specified locations -->
    <xacro:wheels prefix="wheel_left_upper" joint_x="0.3" joint_y="0.35" joint_z="-0.1" />
    <xacro:wheels prefix="wheel_left_lower" joint_x="-0.3" joint_y="0.35" joint_z="-0.1" />
    <xacro:wheels prefix="wheel_right_upper" joint_x="0.3" joint_y="-0.35" joint_z="-0.1" />
    <xacro:wheels prefix="wheel_right_lower" joint_x="-0.3" joint_y="-0.35" joint_z="-0.1" />

</robot>

 